---
## MYSQL CONFIGURATION ##
# mysql version choice
mysql5172:
  version: 5.1.72
  configure_args: >
    --prefix=$BASEDIR --datadir=$DATADIR 
    --with-mysqld-user=mysql --with-charset=utf8 
    --with-extra-charsets=all

mysql5173:
  version: 5.1.73
  configure_args: >
    --prefix=$BASEDIR --datadir=$DATADIR 
    --with-mysqld-user=mysql --with-charset=utf8 
    --with-extra-charsets=all

mysql5549:
  version: 5.5.49
  configure_args: >
    -DCMAKE_INSTALL_PREFIX=$BASEDIR -DMYSQL_DATADIR=$DATADIR -DMYSQL_USER=mysql -DMYSQL_TCP_PORT=3306 -DWITH_MYISAM_STORAGE_ENGINE=1 -DWITH_INNOBASE_STORAGE_ENGINE=1 -DWITH_MEMORY_STORAGE_ENGINE=1 -DWITH_READLINE=1 -DENABLED_LOCAL_INFILE=1 -DWITH_EXTRA_CHARSETS=all -DDEFAULT_CHARSET=utf8 -DDEFAULT_COLLATION=utf8_general_ci

mysql5630:
  version: 5.6.30
  configure_args: >
    -DCMAKE_INSTALL_PREFIX=$BASEDIR -DMYSQL_DATADIR=$DATADIR -DMYSQL_USER=mysql -DMYSQL_TCP_PORT=3306 -DWITH_MYISAM_STORAGE_ENGINE=1 -DWITH_INNOBASE_STORAGE_ENGINE=1 -DWITH_MEMORY_STORAGE_ENGINE=1 -DWITH_READLINE=1 -DENABLED_LOCAL_INFILE=1 -DWITH_EXTRA_CHARSETS=all -DDEFAULT_CHARSET=utf8 -DDEFAULT_COLLATION=utf8_general_ci

# mysql basic conf
mysql_base_dir: /usr/local/mysql
mysql_data_dir: /data/mysql
mysql_init_pass: adminmysql
mysql_daemon_name: mysqld
mysql_daemon_user: mysql
